<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="utku.guleviz.anagram.androidproject.MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:id="@+id/rlWord"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_tile">

        <TextView
            android:id="@+id/counter_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/cup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cup"
            />

        <TextView

            android:id="@+id/score_textview"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/background_material_light"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:text="1000"
            android:layout_toLeftOf="@+id/cup"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView

            android:id="@+id/highscore_textview"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/background_material_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:text="1000"
            android:layout_toRightOf="@+id/cup"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />


        <Button
            android:id="@+id/start_stop_button"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/pause2"/>

        <Button
        android:id="@+id/microphone_button"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/microphone"/>


   </RelativeLayout>


    <ListView
        android:id="@+id/lvClues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rlWord"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/rlWord">


    </ListView>

