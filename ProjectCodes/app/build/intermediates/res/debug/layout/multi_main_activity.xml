<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="utku.guleviz.anagram.androidproject.MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:id="@+id/rlWordM"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_tile">

        <TextView
            android:id="@+id/counter_textviewM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/cupM"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cup"
            />

        <TextView

            android:id="@+id/score_textviewM"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/background_material_light"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:text="1000"
            android:layout_toLeftOf="@+id/cupM"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView

            android:id="@+id/highscore_textviewM"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/background_material_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:text="1000"
            android:layout_toRightOf="@+id/cupM"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />


        <Button
            android:id="@+id/start_stop_buttonM"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/pause2"/>

        <Button
            android:id="@+id/microphone_buttonM"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/microphone"/>



    </RelativeLayout>


    <ListView
        android:id="@+id/lvCluesM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rlWordM"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/rlWordM">


    </ListView>

