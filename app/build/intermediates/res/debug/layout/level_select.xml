<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:id="@+id/relative_"
    android:background="@drawable/bg_tile"
    >

    <Button
        android:id="@+id/easy_button"
        android:text="EASY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"

        />

    <Button
        android:id="@+id/medium_button"
        android:text="MEDIUM"
        android:layout_marginTop="25dp"
        android:layout_below="@id/easy_button"
        android:layout_alignLeft="@id/easy_button"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"

        />

    <Button
        android:id="@+id/hard_button"
        android:layout_marginTop="25dp"
        android:text="HARD"
        android:layout_below="@id/medium_button"
        android:layout_alignLeft="@id/medium_button"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"

        />

    <Button
        android:id="@+id/insane_button"
        android:layout_marginTop="25dp"
        android:text="INSANE"
        android:layout_below="@id/hard_button"
        android:layout_alignLeft="@id/medium_button"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"

        />









</RelativeLayout>
